    "dockerode": "^3.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/dockerode": "^3.3.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "chai": "^4.3.6",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-prettier": "4.0.0",
    "hardhat": "^2.0.0",
    "mocha": "^7.1.2",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
