{
  "name": "@matterlabs/hardhat-zksync-chai-matchers",
  "version": "0.1.0",
  "description": "Hardhat plugin that adds zkSync-specific capabilities to the Chaiassertion library, making your smart contract tests easy to write and read",
  "repository": "github:matter-labs/hardhat-zksync",
  "homepage": "https://github.com/matter-labs/hardhat-zksync/tree/main/packages/hardhat-zksync-chai-matchers",
  "author": "Matter Labs",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "zkSync"
  ],
  "scripts": {
    "lint": "yarn prettier --check && yarn eslint",
    "lint:fix": "yarn eslint --fix",
    "fmt": "yarn prettier --write",
    "eslint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "test": "mocha --recursive \"test/**/*.ts\" --exit",
    "build": "tsc --build .",
    "clean": "rimraf dist"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "parser": "typescript",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "dependencies": {},
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "~1.0.4",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "bignumber.js": "^9.1.0",
    "chai": "^4.3.7",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "mocha": "^10.1.0",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2",
    "zksync-web3": "^0.13.0"
  },
  "peerDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "~1.0.4"
  }
}
