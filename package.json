  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@npmcli/promise-spawn": "^6.0.2",
    "commander": "^10.0.0",
    "get-monorepo-packages": "^1.2.0",
    "husky": "^8.0.3",
