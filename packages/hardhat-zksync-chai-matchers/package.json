{
  "name": "@matterlabs/hardhat-zksync-chai-matchers",
  "version": "0.3.0",
  "description": "Hardhat plugin that adds zkSync-specific capabilities to the Chaiassertion library, making your smart contract tests easy to write and read",
  "repository": "github:matter-labs/hardhat-zksync",
  "homepage": "https://github.com/matter-labs/hardhat-zksync/tree/main/packages/hardhat-zksync-chai-matchers",
  "author": "Matter Labs",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "zkSync"
  ],
  "scripts": {
    "lint": "pnpm eslint",
    "prettier:check": "pnpm prettier --check",
    "lint:fix": "pnpm eslint --fix",
    "fmt": "pnpm prettier --write",
    "eslint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "test": "mocha --recursive \"test/**/*.ts\" --exit",
    "build": "tsc --build .",
    "clean": "rimraf dist"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "parser": "typescript",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "dependencies": {
    "@ethersproject/abi": "^5.1.2",
    "@matterlabs/hardhat-zksync-deploy": "workspace:^",
    "@matterlabs/hardhat-zksync-solc": "^1.2.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.2",
    "ordinal": "^1.0.3",
    "hardhat": "^2.14.0",
    "ethers": "~5.7.2",
    "zksync-ethers": "^5.8.0"
  },
  "devDependencies": {
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "~1.0.4",
    "@openzeppelin/contracts": "^4.8.3",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "bignumber.js": "^9.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^10.4.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "~1.0.4"
  }
}
